<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
        <solid android:color="#b4d3f1" /> <!-- pressed -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
        <solid android:color="#eee" /> <!-- focus -->
        </shape>
    </item> <!-- focused -->
    <item >
        <shape>
        <solid android:color="#fff" /> <!-- default -->
        </shape>
    </item> <!-- focused -->
</selector>